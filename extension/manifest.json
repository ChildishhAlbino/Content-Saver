{
    "name": "Content Saver",
    "version": "1.0",
    "manifest_version": 2,
    "browser_action": {},
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "tabs",
        "downloads",
        "contextMenus"
    ],
    "commands": {
        "toggle-highlight-content": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space",
                "mac": "Command+Shift+Space"
            },
            "description": "Toggle Highlight Content"
        }
    }
}